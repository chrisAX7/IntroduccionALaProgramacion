Proceso Ejercicio05_AreaDeUnTriangulo
	
	Definir base, altura, area Como Real;
	Escribir "APP QUE CALCULA EL AREA DE UN TRIÁNGULO";
	Escribir "Ingrese el valor de la base:";
	leer base;
	Escribir "Ingrese el valor de la altura:";
	leer altura;
	
	area <- base * altura / 2;
	
	Escribir "El área del triángulo es: " , area , "cm³";
FinProceso
